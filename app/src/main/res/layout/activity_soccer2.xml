        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_toStartOf="@+id/tv3_player4"
        android:text="Player7" />

    <TextView
        android:id="@+id/tv3_player8"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:text="Player8"
        android:layout_below="@+id/iv3_player8"
        android:layout_alignStart="@+id/iv3_player8" />

    <TextView
        android:id="@+id/tv3_player9"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:text="Player9"
        android:layout_below="@+id/iv3_player9"
        android:layout_alignEnd="@+id/iv3_player9" />

    <TextView
        android:id="@+id/tv3_player10"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv3_player6"
