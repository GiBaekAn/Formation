<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/soccerbackground"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv3_player1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        app:srcCompat="@drawable/foward" />

    <ImageView
        android:id="@+id/iv3_player2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv3_player1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        app:srcCompat="@drawable/foward" />

    <ImageView
        android:id="@+id/iv3_player3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv3_player2"
        android:layout_marginStart="49dp"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv3_player4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv3_player3"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/iv3_player3"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv3_player5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/iv3_player4"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/iv3_player2"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv3_player6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv3_player2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/iv3_player5"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv3_player7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/iv3_player3"
        android:layout_below="@+id/iv3_player4"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv3_player8"
        android:layout_width="40dp"
