<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context="com.example.user.formation.MainActivity">

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/com_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/com_kakao_login"
        android:backgroundTint="@android:color/white"
        android:ems="14"
        android:hint="( E-mail )"
        android:inputType="textEmailAddress"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@android:color/white"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etEmail"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/white"
        android:ems="14"
        android:hint="(Password)"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@android:color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/ibLogin"
        android:layout_width="90dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/login"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword" />

    <ImageView
        android:id="@+id/ibRegist"
        android:layout_width="90dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/register"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginStart="95dp" />

    <ImageView
        android:id="@+id/loginBtn"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_above="@+id/com_kakao_login"
        android:layout_alignEnd="@+id/com_kakao_login"
        android:layout_alignStart="@+id/com_kakao_login"
        app:srcCompat="@drawable/facebookbtn" />

    <TextView
        android:id="@+id/findtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/com_kakao_login"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="11dp"
        android:text="Don't you know \n ID/PW??"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
