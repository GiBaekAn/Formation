<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/soccerbackground"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/iv_player1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="99dp"
        app:srcCompat="@drawable/foward"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_player2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_player1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="81dp"
        app:srcCompat="@drawable/foward" />

    <ImageView
        android:id="@+id/iv_player3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/iv_player1"
        android:layout_below="@+id/iv_player1"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="92dp"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv_player4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_player3"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/iv_player3"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv_player5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/iv_player4"
        android:layout_toStartOf="@+id/iv_player2"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv_player6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/iv_player3"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/iv_player5"
        app:srcCompat="@drawable/mid" />

    <ImageView
        android:id="@+id/iv_player7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/iv_player3"
        android:layout_below="@+id/iv_player4"
        android:layout_marginTop="58dp"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv_player8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/iv_player4"
        android:layout_below="@+id/iv_player7"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv_player9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/iv_player5"
        android:layout_alignTop="@+id/iv_player8"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv_player10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/iv_player6"
        android:layout_alignTop="@+id/iv_player7"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv_player11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/goalkeeper"
        android:layout_below="@+id/tv_player8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/tv_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_player1"
        android:layout_below="@+id/iv_player1"
        android:text="Player1"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_player1"
        android:layout_alignEnd="@+id/iv_player2"
        android:text="Player2"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_player3"
        android:layout_below="@+id/iv_player3"
        android:text="Player3"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_player4"
        android:layout_toStartOf="@+id/iv_player11"
        android:text="Player4"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_player5"
        android:layout_toEndOf="@+id/iv_player11"
        android:text="Player5"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_player6"
        android:layout_below="@+id/iv_player6"
        android:text="Player6"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_player7"
        android:layout_below="@+id/iv_player7"
        android:text="Player7"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_player8"
        android:layout_toStartOf="@+id/iv_player11"
        android:text="Player8"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_player9"
        android:layout_toEndOf="@+id/iv_player11"
        android:text="Player9"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_player10"
        android:layout_below="@+id/iv_player10"
        android:text="Player10"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_player11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_player11"
        android:layout_toStartOf="@+id/iv_player9"
        android:text="Player11"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/mutebutton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mute"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TeamName"
        android:textColor="@android:color/white"
        android:textSize="29sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mutebutton4"
        app:srcCompat="@drawable/share" />

</RelativeLayout>