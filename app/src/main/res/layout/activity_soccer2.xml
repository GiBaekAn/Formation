        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv3_player9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/iv3_player5"
        android:layout_alignTop="@+id/iv3_player8"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv3_player10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/iv3_player6"
        android:layout_alignTop="@+id/iv3_player7"
        app:srcCompat="@drawable/defender" />

    <ImageView
        android:id="@+id/iv3_player11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv3_player8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/goalkeeper" />

    <TextView
        android:id="@+id/tv3_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/iv3_player1"
        android:layout_centerHorizontal="true"
        android:text="Player1" />

    <TextView
        android:id="@+id/tv3_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv3_player2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:text="Player2" />

    <TextView
        android:id="@+id/tv3_player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv3_player3"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/iv3_player3"
        android:text="Player3" />

    <TextView
        android:id="@+id/tv3_player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv3_player4"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_toEndOf="@+id/tv3_player3"
